{
    "compilerOptions": {
        "allowJs": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "target": "es2015",
        "module": "commonjs",
        "lib": [
            "es2015",
            "dom"
        ],
        "strict": true,
        "outDir": "../../dist/webserver",
        "sourceMap": true
    },
    "include": [
        ".",
        "../common",
        "../lib"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.d.ts"
    ]
}